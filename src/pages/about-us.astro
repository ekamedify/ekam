<script>
  const readMoreBtns = document.querySelectorAll('[data-read-more-btn]')

  readMoreBtns.forEach(readMoreBtn => {
    readMoreBtn.addEventListener('click', () => {
      const readMoreContent = document.querySelector(`[data-read-more="${readMoreBtn.dataset.readMoreBtn}"]`)
      console.log('actionnn --->>>', readMoreBtn.dataset.readMoreBtn)
      if (readMoreBtn?.dataset.action !== 'hide') {
        readMoreContent?.classList.remove('hidden')
        readMoreBtn.querySelector('.read-more-text').innerText = 'Hide'
        readMoreBtn.querySelector('.arrow')?.classList.add('hide')
        readMoreBtn.dataset.action = 'hide'
      } else {
        readMoreContent?.classList.add('hidden')
        readMoreBtn.querySelector('.read-more-text').innerText = 'READ MORE'
        readMoreBtn.querySelector('.arrow')?.classList.remove('hide')
        readMoreBtn.dataset.action = 'show'
      }

    })
  })

</script>

