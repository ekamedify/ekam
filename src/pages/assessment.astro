---
import Layout from "../layouts/Layout.astro";

import TopNavigationBar from "../components/TopNavigationBar.astro";

import titleBG from "../images/titleBG.png";
import "../global.css";
import Footer from "../components/landingPage/Footer.astro";
import Text from "../components/system/Text.astro";
import Section from "../components/system/Section.astro";
import GoToCta from "../components/GoToCta.astro";
import Pedagogy from "../components/academics/pedagogy.astro";

import StudentEnrichment from "../components/academics/StudentEnrichment.astro";

import academic1 from "../image/academics/elementary.jpeg";
// import academic2 from "../image/academics/primary.jpeg";
import academic2 from "../image/academics/academics2.jpeg";
import academic3 from "../image/academics/middle.jpeg";
import camAssesment from "../image/academics/camAssesment.jpeg";
import assessingForProgress from "../image/academics/assessingForProgress.jpeg";
import academic4 from "../image/academics/senior.png";

import circleScribble from "../fillers/circleScribble.png";

import config from "../../config";
import TopperCard from "../components/TopperCard.astro";
import Card from "../components/academics/Card.astro";

import gridBG from "../fillers/gridBG.svg";
import { Image } from "astro:assets";
import Achievements from "../components/Achievements.astro";

const campusConfig = config.campus.find((c) => c.internalName === "kanakapura");

const toppers = campusConfig?.toppers;
---

<Layout 
  title="Assessment | Best International K12 Primary Schools South Bangalore, Electronic City"
  description="Among schools in Electronic City Phase 1, Bangalore and schools in Electronic City Phase 2, Bangalore, Ekam International School Ecity is one of the best CBSE schools in Bangalore with Cambridge assessment."
>
  <div class="flex flex-col">
    <TopNavigationBar />
  </div>

  <div
    class="w-full h-[284px] max-md:h-[190px] flex flex-col items-center justify-center"
    style={{
      background: `url(${titleBG.src})`,
    }}
  >
    <Text type="h2">
      <span class="relative !text-black !not-italic">
        <div class="w-[100px] absolute -top-4 -left-10 -z-[1]">
          <Image
            src={circleScribble}
            alt="Decorative element used in Assessment at Ekam Ecity section"
            class="w-full h-full"
          />
        </div>
      </span>  Assessment  <span>at EKAM</span>
    </Text>
    <div class="p-2"></div>
    <Text type="lg" class="text-center">
      Measuring Progress, Empowering Growth
    </Text>
  </div>



  <div
    class="w-full bg-[#FFE3C1] border"
    style={{
      borderColor: "rgba(255, 111, 36, 0.48)",
    }}
  >
    <Section class="flex flex-col items-center !px-[50px] max-md:!px-[20px]">
      <Card
        titleSingleLine
        image={assessingForProgress}
        title={["Assessing for ", "Progress"]}
        layout="left"
        bodyContent="Assessment at EKAM is a daily process that checks how well students grasp the intended material. Recognising that each student learns differently and at their own pace, we use various assessment methods. The outcomes of these assessments are vital as they help teachers make informed decisions and steer student learning effectively."
        bulletPoints={[
          "Summative Assessments are designed to clearly show what students have learned. They mark the end of a learning period, giving students a chance to showcase their understanding and progress.",
          "Formative Assessment guides learning by offering regular feedback, helping students understand their strengths, improve skills, and achieve success with clear targets.",
        ]}
      />
      <div class="p-[60px] max-md:p-[10px]"></div>
      <Card
        titleSingleLine
        image={academic2}
        title={["Pathways ", "to Excellence"]}
        layout="right"
        bodyContent="At EKAM, our teaching methods are carefully designed to meet each child's unique learning style. We employ diverse and dynamic strategies to ensure comprehensive understanding and skill development."
        bulletPoints={[
          "Observations: Our teachers pay close attention to each student, monitoring their individual and group interactions to personalize their learning journey.",
          "Performance Assessments: We challenge students with real-world tasks that call for a mix of knowledge and skills, mirroring the complex issues adults often face, to apply learning creatively and thoughtfully.",
          "Open-Ended Assessments: Students tackle difficult tasks that require original, innovative solutions, enhancing their problem-solving skills.",
          "Selected Response Assessments (Tests/Quizzes): These assessments quickly gauge a student's understanding of specific subjects at a particular moment.",
          "Portfolios: We compile a dynamic collection of student work that showcases their academic growth, creative achievements, and reflective learning over time.",
        ]}
      />
    </Section>
  </div>
  <div class="w-full bg-white">
    <Section class="flex flex-col items-center !px-[50px] max-md:!px-[20px]">
      <Card
        titleSingleLine
        image={camAssesment}
        title={["Cambridge", "Assessment"]}
        layout="left"
        border
        bodyContent="Cambridge Assessment empowers our school to measure each student's progress, tailoring learning to their unique strengths and needs. It offers a clear view of each learner's abilities, guiding our teaching to support their educational journey effectively. Through comprehensive testing and regular feedback, we ensure every child is on a path to achieving their full potential."
        bulletPoints={[
          "Tailored assessments to track and support individual learning progress",
          "Benchmarks student performance against international standards",
          "Focused interventions to enhance learning in areas needing improvement",
          "Continuous feedback to encourage student reflection and growth",
        ]}
      />
    </Section>
  </div>

  <!-- <Achievements /> -->

  <p class="pb-14 max-md:pb-1" />

  <GoToCta />
  <Footer />
</Layout>

<style>
  .float {
    position: fixed;
    /* background-color:#25d366; */
    color: #fff;
    border-radius: 50px;
    text-align: center;
    font-size: 30px;
    /* box-shadow: 2px 2px 3px #999; */
    z-index: 100;
  }

  .float > div {
    opacity: 0;
    transition: 0.6s all ease-in-out;
  }
  .float a:hover ~ div {
    opacity: 1;
  }

  .my-float {
    margin-top: 16px;
  }
</style>
